{
  "name": "wen-ting-wang",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write . --loglevel warn",
    "test": "yarn test:unit && yarn test:e2e:with-server",
    "test:unit": "jest",
    "test:e2e": "cypress run --headless --project test/e2e",
    "test:e2e:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:e2e'",
    "test:e2e:interactive": "cypress open --project test/e2e",
    "test:e2e:interactive:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:e2e:interactive'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@happykit/flags": "^3.0.0",
    "@vercel/analytics": "^0.1.11",
    "autoprefixer": "^10.4.13",
    "classnames": "^2.3.2",
    "gray-matter": "^4.0.3",
    "moment": "^2.29.4",
    "next": "^13.2.3",
    "next-pwa": "^5.6.0",
    "next-seo": "^5.15.0",
    "node-fetch": "^3.3.0",
    "postcss": "^8.4.21",
    "postcss-preset-env": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.5",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.31.3",
    "tailwindcss": "^3.2.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.5.0",
    "cypress": "^12.7.0",
    "eslint": "<9.0.0",
    "eslint-config-next": "^13.2.3",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^2.8.4",
    "react-test-renderer": "^18.2.0",
    "start-server-and-test": "^2.0.0",
    "webpack": "^5.75.0"
  }
}
