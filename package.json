{
  "name": "wen-ting-wang",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write . --log-level=warn",
    "test": "yarn test:unit && yarn test:smoke:with-server",
    "test:unit": "jest",
    "test:smoke": "cypress run --headless --project test/smoke",
    "test:smoke:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:smoke'",
    "test:smoke:interactive": "cypress open --project test/smoke",
    "test:smoke:interactive:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:smoke:interactive'",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "autoprefixer": "^10.4.23",
    "classnames": "^2.5.1",
    "gray-matter": "^4.0.3",
    "moment": "^2.30.1",
    "next": "16.1.5",
    "next-seo": "^6.8.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^11.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^15.0.7",
    "cypress": "^15.9.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-fetch-mock": "^3.0.3",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.8.1",
    "react-test-renderer": "^18.3.1",
    "start-server-and-test": "^2.1.3",
    "typescript": "^5.9.3"
  }
}
