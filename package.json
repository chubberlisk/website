{
  "name": "wen-ting-wang",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write . --log-level=warn",
    "test": "yarn test:unit && yarn test:smoke:with-server",
    "test:unit": "jest",
    "test:smoke": "cypress run --headless --project test/smoke",
    "test:smoke:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:smoke'",
    "test:smoke:interactive": "cypress open --project test/smoke",
    "test:smoke:interactive:with-server": "start-server-and-test 'next dev --port 3001' 3001 'yarn test:smoke:interactive'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@happykit/flags": "^3.3.0",
    "@vercel/analytics": "^1.0.2",
    "autoprefixer": "^10.4.15",
    "classnames": "^2.3.2",
    "gray-matter": "^4.0.3",
    "moment": "^2.29.4",
    "next": "^13.4.17",
    "next-pwa": "^5.6.0",
    "next-seo": "^6.1.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.28",
    "postcss-preset-env": "^9.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.32.5",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "babel-jest": "^29.6.2",
    "cypress": "^12.17.4",
    "eslint": "<9.0.0",
    "eslint-config-next": "^13.4.18",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "prettier": "^3.0.2",
    "react-test-renderer": "^18.2.0",
    "start-server-and-test": "^2.0.0",
    "webpack": "^5.88.2"
  }
}
